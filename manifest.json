{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Rastreador BBB",
  "description": "Rastreia automaticamente os participantes da casa mais vigiada do Brasil.",
  "author": "Rafael Azevedo",
  "permissions": ["tabs", "storage", "alarms"],
  "action": {
    "default_title": "Rastreador BBB",
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
